<!DOCTYPE html>
<html>
<head>
  <title>Landing Page Window</title>
  <style>
    body {
      margin: 0;
      padding: 0;
    }

    .container {
      display: flex;
      flex-direction: column;
      height: 100vh;
    }

    .options-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px;
      background-color: #f0f0f0;
    }

    .menu-item {
      margin-right: 20px;
    }

    .surveys-container {
      flex: 1;
      overflow-y: auto;
      padding: 10px;
    }

    .survey-list {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
    }

    .survey-item {
      width: 200px;
      margin: 10px;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    .static-bar {
      height: 20px;
      background-color: lightgray;
      opacity: 0.85;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="options-bar">
      <div class="menu-item">
        <span>Account</span>
        <ul>
          <li>Logout</li>
          <li>Delete Account</li>
        </ul>
      </div>
      <div class="menu-item">
        <span>New Survey</span>
      </div>
      <img src="path/to/image.png" alt="Image" width="31" height="31">
    </div>
    <div class="surveys-container">
      <div class="survey-list" id="SurveyList">
        <!-- Survey items will be added here -->
      </div>
    </div>
    <div class="static-bar"></div>
  </div>
</body>
</html>
