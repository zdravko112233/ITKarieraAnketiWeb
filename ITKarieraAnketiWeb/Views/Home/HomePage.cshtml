@model ITKarieraAnketiWeb.Models.ViewModels.HomePageViewModel
<!DOCTYPE html>
<html>
<head>
    <title>Main Menu</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
        }

        .container {
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        .options-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            background-color: #f08880;
        }

        .menu-item {
            margin-right: 20px;
        }

        .surveys-container {
            flex: 1;
            overflow-y: auto;
            padding: 10px;
        }

        .survey-list {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .survey-item {
            width: 200px;
            margin: 10px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .static-bar {
            height: 20px;
            background-color: lightgray;
            opacity: 0.85;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="options-bar">
            <div class="menu-item">
                <span>Account</span>
                <br/>
                <h1>Welcome, @User.Identity.Name!</h1>
            </div>
            <div class="menu-item">
                <form method="get" action="../Survey/SurveyCreator">
                    <button type="submit" class="btn btn-primary">Create Survey</button>
                </form>
            </div>
            <img src="https://img.clipart-library.com/2/clip-survey/clip-survey-4.png" alt="Image" width="150" height="150">
        </div>
        <div class="surveys-container">
            <div class="survey-list" id="SurveyList">
                <!-- Survey items will be added here -->
            </div>
        </div>
        <div class="static-bar"></div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
