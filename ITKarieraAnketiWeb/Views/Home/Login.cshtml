@model ITKarieraAnketiWeb.Models.LoginViewModel
<!DOCTYPE html>
<html>
<head>
  <title>Login Window</title>
  <style>
    .containerinfo {
      width: 800px;
      height: 450px;
      margin: 0 auto;
      border: 1px solid #ccc;
    }

    .title {
      font-size: 50px;
      margin: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .input-field {
      margin: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .button {
      width: 250px;
      height: 50px;
      font-size: 20px;
      cursor: pointer;
    }
  </style>
</head>
<body>
    <div class="containerinfo">
        <h1 class="title">Login</h1>
        <form method="post" asp-controller="Home" asp-action="Login">
            @Html.AntiForgeryToken()
            <div class="input-field">
                <input type="text" asp-for="Username" placeholder="Name">
            </div>
            <div class="input-field">
                <input type="password" asp-for="Password" placeholder="Password">
            </div>
            <div class="input-field">
                <button type="submit" class="button">Login</button>
            </div>
        </form>
    </div>
</body>
</html>