@model ITKarieraAnketiWeb.Models.LoginViewModel
<!DOCTYPE html>
<html>
<head>
    <title>Register Window</title>
    <style>
        .containerinfo {
            width: 800px;
            height: 450px;
            margin: 0 auto;
            border: 1px solid #ccc;
        }

        .title {
            font-size: 50px;
            margin: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .input-field {
            margin: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .button {
            margin: 20px;
            width: 250px;
            height: 50px;
            font-size: 20px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="containerinfo">
        <h1 class="title">Register</h1>
        @using (Html.BeginForm("Register", "Home", FormMethod.Post))
        {
            <div class="input-field">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "Username" } })
            </div>
            <div class="input-field">
                @Html.PasswordFor(model => model.Password, new { @class = "form-control form-control-user", placeholder = "Password" })
            </div>
            <input type="submit" value="Register" class="button input-field" />
            <hr>
        }
        <form method="get" action="/Home/Index">
            <button type="submit">Go Back</button>
        </form>
    </div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>