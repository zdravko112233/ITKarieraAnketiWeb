@page
@model ITKarieraAnketiWeb.Pages.Home.LoginWindowModel
<!DOCTYPE html>
<html>
<head>
  <title>Login Window</title>
  <style>
    .containerinfo {
      width: 800px;
      height: 450px;
      margin: 0 auto;
      border: 1px solid #ccc;
    }

    .title {
      font-size: 50px;
      margin: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .input-field {
      margin: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .button {
      width: 250px;
      height: 50px;
      font-size: 20px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <div class="containerinfo">
    <h1 class="title">Login</h1>
        <form method="post" asp-controller="User" asp-action="Login">
            <div class="input-field">
                <input type="text" id="textLoginName" name="Username" placeholder="Name" width="250">
            </div>
            <div class="input-field">
                <input type="password" id="textLoginPassword" name="Password" placeholder="Password" width="250">
            </div>
            <div class="input-field">
                <button id="buttonLogin" class="button">Login</button>
            </div>
    </form>
  </div>
</body>
</html>
