@page
@model ITKarieraAnketiWeb.Pages.Home.RegisterWindowModel
<!DOCTYPE html>
<html>
<head>
  <title>Register Window</title>
  <style>
        .containerinfo {
            width: 800px;
            height: 450px;
            margin: 0 auto;
            border: 1px solid #ccc;
        }

        .title {
            font-size: 50px;
            margin: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .input-field {
            margin: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .button {
            margin: 20px;
            width: 250px;
            height: 50px;
            font-size: 20px;
            cursor: pointer;
        }
  </style>
</head>
<body>
  <div class="containerinfo">
    <h1 class="title">Register</h1>
        <form method="post" asp-controller="User" asp-action="Register">
      <div class="input-field">
        <input type="text" id="textLoginName" name="Username" placeholder="Name" width="250">
      </div>
      <div class="input-field">
        <input type="password" id="textLoginPassword" name="Password" placeholder="Password" width="250">
      </div>
      <div class="input-field">
        <button id="buttonRegister" class="button">Register</button>
      </div>
    </form>
  </div>
</body>
</html>
