@page
@model ITKarieraAnketiWeb.Pages.Home.RegisterWindowModel
<!DOCTYPE html>
<html>
<head>
  <title>Register Window</title>
  <style>
        .container {
            width: 800px;
            height: 450px;
            margin: 0 auto;
            border: 1px solid #ccc;
        }

        .title {
            font-size: 50px;
            margin: 40px;
        }

        .input-field {
            margin: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .button {
            width: 250px;
            height: 50px;
            font-size: 20px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
        }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="title">Register</h1>
    <div class="input-field">
      <input type="text" id="textRegisterName" placeholder="Name" width="250">
    </div>
    <div class="input-field">
      <input type="password" id="textRegisterPassword" placeholder="Password" width="250">
    </div>
    <form method="post" asp-action="Register">
    <button id="buttonCreateAccount" class="button">Create Account</button>
    </form>
  </div>
</body>
</html>
